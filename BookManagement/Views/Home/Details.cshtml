@{
    ViewData["Title"] = "Details";
}

@model BookModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <h5 class="card-subtitle text-muted mb-3">By @Model.Author</h5>
                    <p><strong>Description:</strong></p>
                    <p class="card-text">@Model.Description</p>
                    <p><strong>ISBN:</strong> @Model.ISBN</p>
                    <p><strong>Author Email:</strong> <a href="mailto:@Model.author_email">@Model.author_email</a></p>
                    <p><strong>Price:</strong> $@Model.price</p>
                    <p><strong>Published Date:</strong> @Model.Created.ToString("MMMM dd, yyyy")</p>

                    <a asp-action="Index" class="btn btn-primary mt-4">Back to Books List</a>
                </div>
            </div>
        </div>
    </div>
</div>